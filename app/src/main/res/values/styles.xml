<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <!--首页titlebar样式-->
    <style name="home_title_bar_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/home_title_bar_color</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!--AroundFragment ListView样式-->
    <style name="around_list_view_style" parent="Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="around_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/around_view_bg_color</item>
    </style>

    <style name="detail_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/detail_view_height</item>
        <item name="android:background">@mipmap/line_divide_vertical</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_still</item>
        <item name="android:windowExitAnimation">@anim/anim_still</item>
    </style>

    <style name="image_gallery_textView_style" parent="base_textView_style">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="me_vertical_view_style">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#50666666</item>
    </style>

    <style name="me_horizontal_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#50666666</item>
    </style>

    <style name="me_userLayout_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/grad</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <style name="me_common_item_relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="me_common_item_icon_imageView_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="me_common_item_title_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor_32</item>
    </style>

    <style name="me_common_item_arrow_right_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/arrow_right_my_gray</item>
    </style>

    <style name="me_common_item_count_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray01</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>

    <style name="common_left_back_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:background">@drawable/back_img_selector</item>
        <!--<item name="android:layout_marginLeft">15dp</item>-->
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="common_right_title_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/back_img_selector</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>












    <!--****************更多界面****************-->
    <style name="more_common_item_textView_style" parent="me_common_item_title_textView_style">
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>
    <style name="more_common_checkBox_style">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_switch</item>
    </style>
    <style name="more_common_desc_textView_style" parent="base_textView_style">

        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textColor">@color/gray01</item>
    </style>



</resources>
